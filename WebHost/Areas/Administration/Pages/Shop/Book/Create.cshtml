@model ShopManageMent.Application.Contract.Book.CreateBook
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد محصول جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="Name" onchange="fillField('ٔName', 'Slug')" >
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Slug" class="control-label">اسلاگ</label>
                    <input type="text" class="form-control" asp-for="Slug">
                    <span asp-validation-for="Slug" class="error"></span>
                </div>
            </div>
        </div>
        
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Keywords" class="control-label">گروه محصول</label>
                    <select class="form-control" asp-for="CateguryId" asp-items='new SelectList(Model.Categuries , "Id" , "Name")'>
                        <option value="0">گروه محصول </option>
                    </select>
                    <span asp-validation-for="Keywords" class="error"></span>
                </div>
            </div>
        </div>

        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                 <label asp-for="UnitPrice" class="control-label">قیمت</label>
                    <input type="text" class="form-control" asp-for="UnitPrice">
                    <span asp-validation-for="UnitPrice" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                 <label asp-for="Weight" class="control-label">وزن</label>
                    <input type="text" class="form-control" asp-for="Weight">
                    <span asp-validation-for="Weight" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                 <label asp-for="Writer" class="control-label">نویسنده</label>
                    <input type="text" class="form-control" asp-for="Writer">
                    <span asp-validation-for="Keywords" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                 <label asp-for="Translator" class="control-label">مترجم</label>
                    <input type="text" class="form-control" asp-for="Translator">
                    <span asp-validation-for="Translator" class="error"></span>
                </div>
            </div>
        </div>
        

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                 <label asp-for="PublisherName" class="control-label">نام ناشر</label>
                    <input type="text" class="form-control" asp-for="PublisherName">
                    <span asp-validation-for="PublisherName" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                 <label asp-for="PublishDate" class="control-label">تاریخ انتشار</label>
                    <input type="text" class="form-control" asp-for="PublishDate">
                    <span asp-validation-for="PublishDate" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                 <label asp-for="Picture" class="control-label">عکس</label>
                    <input type="text" class="form-control" asp-for="Picture">
                    <span asp-validation-for="Picture" class="error"></span>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                 <label asp-for="CoverKind" class="control-label">نوع جلد</label>
                    <input type="text" class="form-control" asp-for="CoverKind">
                    <span asp-validation-for="CoverKind" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                 <label asp-for="BookCut" class="control-label">قطع کتاب</label>
                    <input type="text" class="form-control" asp-for="BookCut">
                    <span asp-validation-for="BookCut" class="error"></span>
                </div>
            </div>
        </div>



        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                 <label asp-for="PageCount" class="control-label">تعداد صفحه</label>
                    <input type="text" class="form-control" asp-for="PageCount">
                    <span asp-validation-for="PageCount" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                <label asp-for="ISBN" class="control-label">شابک</label>
                    <input type="text" class="form-control" asp-for="ISBN">
                    <span asp-validation-for="ISBN" class="error"></span>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                 <label asp-for="PictureAlt" class="control-label">توضیحات عکس</label>
                    <input type="text" class="form-control" asp-for="PictureAlt">
                    <span asp-validation-for="PictureAlt" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                <label asp-for="PictureTitle" class="control-label">تیتر عکس</label>
                    <input type="text" class="form-control" asp-for="PictureTitle">
                    <span asp-validation-for="PictureTitle" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Keywords" class="control-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="Keywords">
                    <span asp-validation-for="Keywords" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="MetaDescription" class="control-label">توضیحات متا</label>
                    <textarea class="form-control autogrow" asp-for="MetaDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="MetaDescription" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="ShortDescription" class="control-label">خلاصه محتوا</label>
                    <textarea class="form-control autogrow" asp-for="ShortDescription" onchange="fillField('ShortDescription', 'MetaDescription')"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="ShortDescription" class="error"></span>
                </div>
            </div>
        </div>
    
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="MetaDescription" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="Description"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="Description" class="error"></span>
                </div>
            </div>
        </div>



    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>